<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="7dp"
    android:paddingRight="10dp"
    >
    
    <ImageView
        android:id="@+id/project_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_accept"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        />
   
    <ImageView
        android:id="@+id/project_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/actionbar_back_indicator"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="8dp"
        />
	
    <TextView
       android:id="@+id/project_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       style="@android:style/TextAppearance.Medium"
       android:text="TextView"
       android:layout_toLeftOf="@id/project_pic"
       android:layout_toRightOf="@id/project_selected"
       android:layout_alignParentTop="true"
       android:textColor="#000000"
       />

    <TextView
       android:id="@+id/project_description"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       style="@android:style/TextAppearance.Small"
       android:text="Very long description "
       android:layout_below="@id/project_name"
       android:layout_alignLeft="@id/project_name"
       android:layout_toLeftOf="@id/project_pic"
       android:maxLines="2"
       android:ellipsize="end"
       />

</RelativeLayout>
